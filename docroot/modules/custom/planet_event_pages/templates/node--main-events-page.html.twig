{# events-section.twig #}
<div
	class="bg-[#202020] text-white px-4 md:px-8 2xl:px-0 coh-hero coh-hero-full-width pb-20">
	{# Header Section #}
	<h1 class="text-5xl font-bold text-center pt-40 pb-20">{{'Planet events'|t}}</h1>

	{# Featured Event Banner #}
	{% if featured %}
		{% include '/modules/custom/planet_event_pages/templates/events-helper-featured-box.html.twig' with { featured: featured } %}
	{% endif %}


	{# Upcoming Events Section #}
	<h2 class="text-5xl font-bold mb-[76px] text-center">{{'Upcoming events'|t}}</h2>

	{# Search and Filter Bar #}
	<div class="grid grid-cols-1 md:grid-cols-2 gap-3 max-w-5xl mx-auto my-20">
		<div class="planet-events-search-wrapper max-h-14 col-span-1 relative flex bg-zinc-50 rounded-full w-full items-center justify-around">
			<input type="text" placeholder="{{'Search events'|t}}" class="planet-events-search text-[#202020] focus:outline-none flex py-4 rounded-md px-8 w-11/12">
			<button class="planet-events-search-btn bg-black hover:bg-[#e00083] h-11 w-11 relative flex rounded-full bg-no-repeat bg-center right-0 top-0 mr-1.5" style="background-image:url('/resources/icons/search.svg')"></button>
		</div>

		<div class="col-span-1 grid gap-3 grid-cols-2">
			<div class="relative w-full col-span-2 md:col-span-1">
				<div class="planet-custom-select planet-custom-select-theme-dark">
					<div class="planet-custom-select-main font-semibold">{{'Location'|t}}</div>
					<ul hidden class="planet-custom-select-list planet-events-filter-location">
						<li data-id="default" class="default-option">{{'Location'|t}}</li>
						{% for location in event_locations %}
							<li data-id="{{ location.id }}">{{ location.name }}</li>
						{% endfor %}
					</ul>
				</div>
			</div>

			<div class="relative w-full col-span-2 md:col-span-1">
				<div class="planet-custom-select planet-custom-select-theme-dark">
					<div class="planet-custom-select-main font-semibold">{{'Event tags'|t}}</div>
					<ul hidden class="planet-custom-select-list planet-events-filter-tags">
						<li data-id="default" class="default-option">{{'Event tags'|t}}</li>
						{% for category in event_categories %}
							<li data-id="{{ category.id }}">{{ category.name }}</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	</div>
	{# Events Grid #}
	<div class="events-translated-labels" data-view-details="{{'View details'|t}}" data-search-too-short="{{ 'Please enter more than 2 characters to search.'|t }}" data-already-searched="{{ "You've already searched for this term."|t }}" hidden></div>


	<div class="max-w-5xl mx-auto pb-20 js-events-notfound" style="display: none">
		{{ "We couldn't find any events matching your search criteria. Please try using different keywords or check back later for upcoming events!"|t }}
	</div>
	<div
		class="js-events grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto pb-12">
