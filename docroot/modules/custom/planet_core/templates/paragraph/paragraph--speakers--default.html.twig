<div class="max-w-screen-xl mx-auto py-12 md:py-20">
  <h2 class="text-center font-semibold text-[32px]">
    {{ paragraph.fields.field_speakers_title[0].value }}
  </h2>
  <div class="flex items-center justify-center pt-12">
    <div class="container mx-auto max-w-6xl px-4">
      {# Define the number of speakers #}
      {% set speaker_count = paragraph.fields.field_speakers|length %}
      
      <div class="flex flex-wrap justify-center">
        {% for speaker in paragraph.fields.field_speakers %}
          {# Apply different widths based on the number of speakers #}
          <div 
            class="
              flex flex-col items-center w-full sm:w-1/2 md:w-1/2 lg:w-1/2 pb-8 text-center 
              {% if speaker_count == 1 %}xl:w-full{% endif %}
              {% if speaker_count == 2 %}xl:w-1/2{% endif %}
              {% if speaker_count == 3 %}xl:w-1/3{% endif %}
              {% if speaker_count >= 4 %}xl:w-1/4{% endif %}
            "
          >
            {# Speaker image with rounded corners #}
            <img 
              src="{{ speaker.fields.field_optimized_image_url }}" 
              alt="Speaker Image" 
              class="rounded-3xl h-64 w-64 object-cover mb-4"
            >
            <div class="text-left w-64">
            {# Speaker name #}
            <h3 class="text-xl text-left font-semibold">{{ speaker.fields.field_speaker_name[0].value }}</h3>
            
            {# Speaker role and company #}
            <p class="text-sm text-left text-gray-600">
              {{ speaker.fields.field_speaker_role[0].value }}{% if speaker.fields.field_speaker_company[0].value %}, <span class="text-[#202020] font-semibold">{{ speaker.fields.field_speaker_company[0].value }}</span>{% endif %}
            </p>
          </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
