<div class="flex {% if paragraph.fields.field_hero_form %} flex-col {% else %} flex-col-reverse {% endif %} md:flex-col relative bg-white paragraph--hero-component">
	{% set corners = paragraph.fields.field_rounded_corners[0].value %}
	<div class="relative md:absolute top-0 left-0 w-full h-full">
		<div class="max-w-7xl px-4 md:px-8 2xl:px-0 mx-auto grid grid-cols-1 md:grid-cols-2 md:min-h-[700px]">
			<div class="md:items-center flex">
				<div class="w-full md:pr-4">
					<p class="block text-sm font-semibold leading-4 mt-6 md:mt-4 pl-4 uppercase border-l-4 border-solid border-l-[#E00083] mb-4">
						{{ paragraph.fields.field_hero_label[0].value }}
					</p>
					<h1 class="mt-4 block font-semibold text-[46px] leading-[3rem] lg:text-5xl">
						{{ paragraph.fields.field_hero_title[0].value }}
					</h1>

					<div class="mt-4 md:mt-6 font-light leading-[22px] md:leading-[20px] text-[16px] md:text-[20px] hero-desc-paragraph">
						{{ paragraph.fields.field_hero[0].value|raw }}
					</div>
				<!-- CTA buttons -->
				<div
					class="mt-8 flex flex-col md:flex-row gap-2 md:gap-4">
					{# Button 1 #}
					{% if paragraph.fields.field_button_1_link[0].alias %}
						<a href="{{ paragraph.fields.field_button_1_link[0].alias|replace({'internal:': ''}) }}" class="hero-link transition-all duration-300 w-full md:w-fit inline-flex justify-center items-center px-6 py-4 bg-gray-900 text-white font-medium rounded-full hover:bg-[#e00083] focus:border-2 border-2 border-transparent border-solid focus:border-solid focus:border-[rgb(165,165,165)]" {% if paragraph.fields.field_button_1_open[0].value == '1' %} target="_blank" rel="noopener" {% endif %}>
							{{ paragraph.fields.field_button_1_label[0].value }}
						</a>
					{% endif %}

					{# Button 2 #}
					{% if paragraph.fields.field_button_2_link[0].alias %}
						<a href="{{ paragraph.fields.field_button_2_link[0].alias|replace({'internal:': ''}) }}" class="hero-link transition-all duration-300 w-full md:w-fit inline-flex justify-center items-center px-6 py-4 bg-transparent text-black font-medium rounded-full hover:bg-[#e00083] hover:text-white  focus:border-2 border-2 border-[#e00083] border-solid focus:border-solid focus:border-[rgb(165,165,165)]" {% if paragraph.fields.field_button_2_open[0].value == '1' %} target="_blank" rel="noopener" {% endif %}>
							{{ paragraph.fields.field_button_2_label[0].value }}
						</a>
					{% endif %}

					</div>
				</div>
			</div>
			<div></div>
		</div>
	</div>
	<div
		class="{% if paragraph.fields.field_hero_form %} max-w-[1336px] mx-auto {% endif %}grid grid-cols-1 md:grid-cols-2 bg-white md:min-h-[700px]">
		<!-- Left content column with padding -->
		<div><!-- Pre-heading -->
		</div>

		<!-- Right column with form -->
		{% if paragraph.fields.field_hero_form %}
			<div class="order-3 md:order-2 m-4">
				<div class="coh-style-form site-studio-webform-element site-studio-webform-node-element" style="padding: 0">
					<div id="contact-us" class="p-8 md:m-8 rounded-lg" style="box-shadow: 0 0.25rem 1.5625rem rgba(0,0,0,0.1)">
						{{paragraph.fields.field_hero_form}}
					</div>
				</div>
			</div>
		{% else %}
			<!-- Right column with image -->
			<div style="background-image: url({{ paragraph.fields.hero_image_url }})" class="{% if corners != '0' %}rounded-[16px] md:rounded-l-[24px] md:rounded-r-none {% endif %}bg-gray-200 bg-cover bg-center min-h-[300px] md:min-h-[600px] order-1 md:order-2"></div>
		{% endif %}
	</div>
</div>