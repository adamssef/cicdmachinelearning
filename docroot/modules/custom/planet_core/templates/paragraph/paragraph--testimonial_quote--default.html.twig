{% set style = paragraph.fields.field_testimonial_style[0].value ?? 'default' %}

<div class="w-full bg-[#e00083] text-white py-14">
  <div class="max-w-screen-xl mx-auto flex flex-col md:flex-row px-6 md:px-12 gap-8 items-center">
    
    {% if paragraph.fields.testimonial_image_url is not empty %}
      <div class="w-full md:w-2/5 flex justify-center lg:justify-end">
        <img class="w-32 h-32 rounded-full bg-white" src="{{ paragraph.fields.testimonial_image_url }}" alt="{{ paragraph.fields.field_testimonial_name[0].value }}">
      </div>
    {% endif %}

    <div class="w-full md:w-3/5 flex flex-col justify-center border-solid border-l-4 border-white pl-4">
      <blockquote class="text-base font-semibold leading-relaxed leading-6 children-semibold">
        {{ paragraph.fields.field_quote[0].value|raw }}
      </blockquote>

      <div class="mt-4">
        <div class="text-lg font-semibold">{{ paragraph.fields.field_testimonial_name[0].value }}</div>
        {% if paragraph.fields.field_testimonial_role is not empty %}
          <div class="text-base font-light">{{ paragraph.fields.field_testimonial_role[0].value }}</div>
        {% endif %}
      </div>
    </div>

  </div>
</div>
