<div class="max-w-screen-xl mx-auto py-12 md:py-20">
  <h2 class="text-center font-semibold text-4xl md:text-5xl">
    {{ paragraph.fields.field_sponsors_title[0].value }}
  </h2>
  <div class="flex items-center justify-center mt-6">
    <div class="container mx-auto max-w-6xl px-4">
      <div class="flex flex-wrap justify-center mx-auto py-5 items-center">
      
        {% for logo in paragraph.fields.field_sponsor_logos %}
          <div class="relative w-1/3 sm:w-1/4 lg:w-1/5 flex px-2 md:px-6 flex-col text-center">
            <img 
              src="{{ logo.fields.field_logo_image }}" 
              alt="Sponsor Logo" 
              class="mx-auto object-contain max-h-20 sm:max-h-40 w-auto"
            >

            {# Vertical line between logos, hidden on the last item #}
            {% if not loop.last %}
              <div class="lock absolute top-0 right-0 h-full border-r border-solid border-gray-300"></div>
            {% endif %}
          </div>
        {% endfor %}
        
      </div>
    </div>
  </div>
</div>
<div class="hidden xl:px-0"></div>
