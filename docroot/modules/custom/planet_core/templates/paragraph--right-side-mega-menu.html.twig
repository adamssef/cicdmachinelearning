{%
  set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  'right-side-mega-menu',
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished'
]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% if content.field_title is not empty %}
      <div class="right-side-mega-menu__title">{{ content.field_title }}</div>
    {% endif %}
    {% if content.field_description is not empty %}
      <div class="right-side-mega-menu__description">{{ content.field_description }}</div>
    {% endif %}
    {% if content.field_link is not empty %}
      <div class="right-side-mega-menu__link">{{ content.field_link }}</div>
    {% endif %}
  </div>
{% endblock paragraph %}
