    max-width: 816px;
    margin: 0 auto
  }
  .pms-transformation-lang-selector-inner {
    margin-bottom: 48px;
    font-size: 20px;
    color: #545454;
    font-weight: 300;
  }
  .lavender-bg .coh-heading {
    line-height: 60px;
    font-size: 54px;
  }

