{% macro render_menu(items) %}
    <ul class="space-y-2 border-l-2">
        {% for item in items %}
            <li class="!mb-4">
                <a href="{{ item.url }}" class="{% if item.active %}text-[#4F46E5]{% else %}text-black{% endif %} textblock  hover:text-[#4F46E5] font-semibold transition-all duration-300">{{ item.title }}</a>
                {% if item.children is defined and item.children is not empty %}
                    {% for child in item.children %}
                        <a href="{{ child.url }}" class="text-black textblock  hover:text-[#4F46E5] font-light block">{{ child.title }}</a>
                    {% endfor %}
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endmacro %}

{% import _self as macros %}

<div class="flex justify-between max-w-[1280px] m-auto gap-20 my-20">
    <nav class="legal-menu rounded-lg  w-fit px-4 md:px-8 lg-custom:px-4 xl-custom:px-0">
        {{ macros.render_menu(menu_items) }}
    </nav>
    <div class="w-[700px] mr-4 md:mr-8 lg:mr-0">
        <span class="text-[32px] font-semibold leading-[40px] mb-4 inline-block">{{ label }}</span>
        <div class="!font-light">{{ content.body }}</div>
    </div>
</div>




